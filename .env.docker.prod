# .env.docker.prod - Configuration pour Docker (production)

# ===== DATABASE =====
# À configurer avec vos vraies valeurs en production
DATABASE_URL=postgresql://bloguser:CHANGE_THIS_PASSWORD@postgres:5432/blogdb
POSTGRES_USER=bloguser
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=blogdb

# ===== APPLICATION =====
NODE_ENV=production
BACKEND_PORT=3001
PORT=3000

# ===== ADMIN DEFAULT =====
# À changer en production !
ADMIN_EMAIL=admin@votre-domaine.com
ADMIN_PASSWORD=CHANGE_THIS_PASSWORD

# ===== SECURITY =====
# IMPORTANT: Générer une clé JWT forte en production
JWT_SECRET=CHANGE_THIS_JWT_SECRET_IN_PRODUCTION

# ===== DOCKER SPECIFIC =====
DB_HOST=postgres
DB_PORT=5432
SEED_DB=false

# ===== PRODUCTION =====
NEXT_TELEMETRY_DISABLED=1