# .env.docker.prod - Configuration pour Docker (production) & Dokploy

# ===== BASE DE DONNÉES =====
POSTGRES_USER=bloguser
POSTGRES_PASSWORD=CHANGE_THIS_IN_PRODUCTION
POSTGRES_DB=blogdb

# ===== APPLICATION =====
NODE_ENV=production
BACKEND_PORT=3001

# ===== ADMIN =====
ADMIN_EMAIL=admin@votre-domaine.com
ADMIN_PASSWORD=CHANGE_THIS_PASSWORD

# ===== SÉCURITÉ =====
JWT_SECRET=GENERATE_STRONG_JWT_SECRET_HERE

# ===== DÉPLOIEMENT =====
SEED_DB=false

# ===== DOKPLOY SPÉCIFIQUE =====
# Ces variables seront configurées dans l'interface Dokploy
DOMAIN=votre-domaine.com
SSL_EMAIL=admin@votre-domaine.com

# ===== AUTRES =====
NEXT_TELEMETRY_DISABLED=1